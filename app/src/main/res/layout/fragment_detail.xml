<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.co.samik.hospitalfinder.DetailActivityFragment"
    tools:showIn="@layout/activity_detail">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/nameTextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/addressTextView"
        android:layout_below="@+id/nameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visit Website"
        android:id="@+id/button"
        android:layout_below="@+id/phoneView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hospital Category:"
        android:id="@+id/categoryLabel"
        android:layout_column="0"
        android:layout_below="@+id/addressTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoryView"
        android:layout_column="1"
        android:text="category"
        android:layout_alignTop="@+id/categoryLabel"
        android:layout_toRightOf="@+id/categoryLabel"
        android:layout_toEndOf="@+id/categoryLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/careTypeView"
        android:layout_column="1"
        android:text="Hospital"
        android:layout_alignTop="@+id/careTypeLabel"
        android:layout_toRightOf="@+id/careTypeLabel"
        android:layout_toEndOf="@+id/careTypeLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/medicineSystemView"
        android:layout_column="1"
        android:text="Allopathic"
        android:layout_alignTop="@+id/medicineSystemLabel"
        android:layout_toRightOf="@+id/medicineSystemLabel"
        android:layout_toEndOf="@+id/medicineSystemLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phoneView"
        android:layout_column="1"
        android:text="1234567"
        android:layout_alignTop="@+id/phoneLabel"
        android:layout_toRightOf="@+id/phoneLabel"
        android:layout_toEndOf="@+id/phoneLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Care Type:"
        android:id="@+id/careTypeLabel"
        android:layout_column="0"
        android:layout_below="@+id/categoryLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Systems of medicine:"
        android:id="@+id/medicineSystemLabel"
        android:layout_column="0"
        android:layout_below="@+id/careTypeView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:id="@+id/phoneLabel"
        android:layout_column="0"
        android:layout_below="@+id/medicineSystemLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

</RelativeLayout>
